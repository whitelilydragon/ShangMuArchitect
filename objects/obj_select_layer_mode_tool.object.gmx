          <argument>
            <kind>1</kind>
            <string>///GUI Logic
if gui_close = 0
    {
        gui_achor_x -= 3;
        if (gui_achor_x &lt; 267) gui_achor_x = 267;
        gui_alpha = lerp(gui_alpha,0.4,0.15)
    }
if op.use_tile_menu_cool_down = 0
    {
        if gui_close = 0
            {        
                //GUI Interface Interations
                if (mouse_check_button_pressed(op.joy_mouse_button_left) or op.use_put_here = 1)
                    {
                        //Param Input Box 1
                        if  device_mouse_x_to_gui(0) &gt;= gui_achor_x+6 and device_mouse_x_to_gui(0) &lt;= gui_achor_x+80
                        and device_mouse_y_to_gui(0) &gt;= gui_achor_y+29 and device_mouse_y_to_gui(0) &lt;= gui_achor_y+41
                            {
                                //scr_set_message("Auto layer switching enabled!")
                                op.use_tile_switching_mode = 0
                                frame = op.use_tile_switching_mode
                                op.item_rotate_angle = 0
                                op.item_rotate_allowed = scr_set_check_item_rotate(op.user_tile_selected)
                                op.use_auto_save = 0
                                op.use_tile_menu_cool_down = 8
                                audio_play_sound(pause_select,50,false)
                                scr_set_highlighter(gui_achor_x+6,gui_achor_y+29,gui_achor_x+80,gui_achor_y+41)
                            }
                        //Param Input Box 2
                        if  device_mouse_x_to_gui(0) &gt;= gui_achor_x+6 and device_mouse_x_to_gui(0) &lt;= gui_achor_x+80
                        and device_mouse_y_to_gui(0) &gt;= gui_achor_y+42 and device_mouse_y_to_gui(0) &lt;= gui_achor_y+53
                            {
                                //scr_set_message("Manual layer switching enabled!")
                                op.use_tile_switching_mode = 1
                                frame = op.use_tile_switching_mode
                                op.item_rotate_angle = 0
                                op.item_rotate_allowed = 0
                                op.use_tile_menu_cool_down = 8
                                audio_play_sound(pause_select,50,false)
                                scr_set_highlighter(gui_achor_x+6,gui_achor_y+42,gui_achor_x+80,gui_achor_y+52)
                            }
                        //Exit Move Tool (Clicking Outside GUI Box)
                        if (device_mouse_x_to_gui(0) &gt;= gui_achor_x+96 or device_mouse_x_to_gui(0) &lt; gui_achor_x)
                        or (device_mouse_y_to_gui(0) &gt;= gui_achor_y+88 or device_mouse_y_to_gui(0) &lt; gui_achor_y)
                            {
                                audio_play_sound(pause_select,50,false)
                                op.use_tile_menu_cool_down = 8
                                gui_close = 1
                            }
                    }
            }
    }

//Exit Tool Transition
if gui_close = 1
    {
        gui_achor_x += 3
        gui_alpha = lerp(gui_alpha,0,0.35)

        op.use_tile_menu = 0
        op.use_tile_menu_cool_down = 8

        if gui_achor_x &gt;= 293
            instance_destroy();
    }
